<body>

  <h2>Want to Check In?</h2>
  <p>Click the button below to open the Church Center form in a popup window.</p>
  <button class="btn" onclick="openModal()">Open Form</button>

  <div id="churchModal" class="modal">
    <div class="modal-content">
      <span class="close-btn" onclick="closeModal()">&times;</span>
      <iframe src="https://versaillesumc.churchcenter.com/people/forms/779435" allowfullscreen></iframe>
    </div>
  </div>

  <script>
    function openModal() {
      document.getElementById("churchModal").style.display = "block";
    }

    function closeModal() {
      document.getElementById("churchModal").style.display = "none";
    }

    window.onclick = function(event) {
      const modal = document.getElementById("churchModal");
      if (event.target === modal) {
        closeModal();
      }
    };
  </script>

